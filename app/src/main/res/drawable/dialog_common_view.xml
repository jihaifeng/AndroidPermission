<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="@color/common_line" />
                    <corners
                        android:bottomLeftRadius="7.0dp"
                        android:bottomRightRadius="7.0dp"
                        android:topLeftRadius="7.0dp"
                        android:topRightRadius="7.0dp" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:right="1dp">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/white" />
                    <corners
                        android:bottomLeftRadius="7.0dp"
                        android:bottomRightRadius="7.0dp"
                        android:topLeftRadius="7.0dp"
                        android:topRightRadius="7.0dp" />
                    <padding
                        android:top="1dp"
                        android:right="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <solid android:color="@color/common_line" />
                    <corners
                        android:bottomLeftRadius="7.0dp"
                        android:bottomRightRadius="7.0dp"
                        android:topLeftRadius="0.0dp"
                        android:topRightRadius="0.0dp" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:right="1dp">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/common_line" />
                    <corners
                        android:bottomLeftRadius="7.0dp"
                        android:bottomRightRadius="7.0dp"
                        android:topLeftRadius="0.0dp"
                        android:topRightRadius="0.0dp" />
                    <padding
                        android:top="1dp"
                        android:right="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>